{
  "compilerOptions": {
    "composite": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "preserveConstEnums": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules/**/*",
    "dist/**/*"
  ],
  "references": [
    {
      "path": "../model/tsconfig.build.json"
    }
  ]
}
