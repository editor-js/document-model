{
  "compilerOptions": {
    "composite": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["jest"],
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src/**/*", "postcss.config.ts", "src/types/**/*"],
  "exclude": [
    "node_modules/**/*",
    "dist/**/*"
  ],
  "references": [
    {
      "path": "../model/tsconfig.build.json"
    }
  ]
}
