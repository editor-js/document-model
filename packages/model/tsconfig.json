{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "types": ["jest"],
    "composite": true,
    "rootDir": "src/"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules/**/*",
    "dist/**/*"
  ]
}
